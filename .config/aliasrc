alias tmpdir='cd $(mktemp -d)'
alias tempdir='tmpdir'
alias ff='firefox'

alias ls='ls --color=always'
alias grep='grep --color=auto --exclude-dir={.git,vendor}'
alias vi='nvim'
alias vim='nvim'
alias vimrc='vim ~/.vim/vimrc'
alias qgrep='qreset; grep'

