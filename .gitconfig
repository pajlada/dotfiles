[core]
    pager = "less -x5,9"
    editor = "nvim"
    symlinks = true
    whitespace = trailing-space

[push]
    default = simple

[pull]
	rebase = true

[branch]
    sort = -committerdate

[tag]
    sort = -version:refname

[diff]
    algorithm = histogram # just testing

[maintenance]
    auto = true
    strategy = incremental

[alias]
    st = status --ignore-submodules=dirty
    sts = status --ignore-submodules=dirty --short
    ci = commit --verbose
    co = checkout
    df = diff
    lg = log -p
    ap = add --patch
    track = add -N
    dfh = diff HEAD
    diffh = diff HEAD
    permission-reset = !git diff -p -R --no-color | grep -E \"^(diff|(old|new) mode)\" --color=never | git apply
    prune-tags = !git tag -l | xargs git tag -d && git fetch -t
    cp = cherry-pick
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[include]
    path = ~/.gitcredentials
[rerere]
	enabled = true
    autoUpdate = true

[commit]
    verbose = true

[includeIf "hasconfig:remote.*.url:git@github.com:Chatterino/chatterino2*"]
    path = ~/.gitsigning
