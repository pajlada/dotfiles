bindsym $mod+ctrl+p exec slurp > /tmp/grim_region
bindsym $mod+shift+p exec grim -g "$(cat /tmp/grim_region)" "$HOME/Pictures/grim/unsorted_$(date +"%Y%m%d_%Hh%Mm%Ss").png"
bindsym $mod+ctrl+shift+p exec zz-grim-current-window "$HOME/Pictures/grim/unsorted_$(date +"%Y%m%d_%Hh%Mm%Ss").png"
bindsym $mod+p exec grim -g "$(slurp)" "$HOME/Pictures/grim/unsorted_$(date +"%Y%m%d_%Hh%Mm%Ss").png"

bindsym $mod+ctrl+o exec slurp > /tmp/grim_region
bindsym $mod+shift+o exec grim -g "$(cat /tmp/grim_region)" - | wl-copy
bindsym $mod+ctrl+shift+o exec zz-grim-current-window - | wl-copy
bindsym $mod+o exec grim -g "$(slurp)" - | wl-copy

bindsym $mod+ctrl+shift+i exec zz-wf-recorder-current-window | wl-copy -t text/uri-list

